{
  "repository": {
    "url": "https://github.com/yanyandiyang-crypto/lottery-system",
    "branch": "master",
    "remote": "origin"
  },
  "autoSync": {
    "enabled": true,
    "commitMessage": "Auto-sync: {timestamp} - Lottery system updates",
    "includeTimestamp": true,
    "excludeFiles": [
      "node_modules/**",
      ".git/**",
      "*.log",
      "temp/**",
      "*.tmp"
    ]
  },
  "notifications": {
    "showSuccess": true,
    "showErrors": true,
    "playSound": false
  },
  "backup": {
    "enabled": true,
    "maxBackups": 5,
    "backupDir": "./backups"
  }
}
